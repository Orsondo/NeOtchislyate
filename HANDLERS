from aiogram import F, Router
from aiogram.types import Message, CallbackQuery, InputFile
from aiogram.filters import CommandStart, Command
from aiogram.fsm.state import State, StatesGroup
from aiogram.fsm.context import FSMContext
from aiogram.types import BufferedInputFile
from datetime import datetime

import keyboards as kb

router = Router()

class Register(StatesGroup):
    name = State()
    group = State()

class Test(StatesGroup):
    answers = State()

class Testtwo(StatesGroup):
    answerss = State()

class Testthree(StatesGroup):
    answersss = State()

@router.message(CommandStart())
async def cmd_start(message: Message):
    await message.answer('–ü—Ä–∏–≤–µ—Ç!')
    await message.reply('–ù–∞—á–Ω–µ–º –ø—Ä–æ—Ö–æ–∂–¥–µ–Ω–∏–µ? –ù–æ –¥–ª—è –Ω–∞—á–∞–ª–∞ –ø—Ä–æ–π–¥–∏ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—é, –Ω–∞–ø–∏—à–∏ /register –≤ —á–∞—Ç')

@router.message (Command('help'))
async def cmd_help(message: Message):
    await message.answer('–í—ã –Ω–∞–∂–∞–ª–∏ –Ω–∞ –∫–Ω–æ–ø–∫—É –ø–æ–º–æ—â–∏.')

@router.message (F.text == '–¢–µ—Å—Ç—ã')
async def testi(message: Message):
    await message.answer('–í—ã–±–µ—Ä–∏—Ç–µ –≤–∞—Ä–∏–∞–Ω—Ç:', reply_markup=kb.testi)

@router.message (F.text == '–ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞')
async def podgot(message: Message):
    await message.answer('–í–∞—Ä–∏–∞–Ω—Ç 1: \n\n1 - –ó–∞—Ä–µ–∑–µ—Ä–≤–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ —Å–ª–æ–≤–∞ –≤ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏–∏-—Å–ª–æ–≤–∞ –∏ –≤—ã—Ä–∞–∂–µ–Ω–∏—è, –∫–æ—Ç–æ—Ä—ã–µ –∏–º–µ—é—Ç –ø—Ä–µ–¥–æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è –∏ –Ω–µ –º–æ–≥—É—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è –ø—Ä–∏ –Ω–∞–ø–∏—Å–∞–Ω–∏–∏ –∫–æ–¥–∞ –¥–ª—è –∏–Ω—ã—Ö —Ü–µ–ª–µ–π. \n2 - –ö–æ–Ω—Å—Ç–∞–Ω—Ç–∞-–ø–æ—Å—Ç–æ—è–Ω–Ω–∞—è, –∏–º–µ–Ω–æ–≤–∞–Ω–Ω–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ, –∫–æ—Ç–æ—Ä–æ–µ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –∏–∑–º–µ–Ω–µ–Ω–æ. –ö–æ–Ω—Å—Ç–∞–Ω—Ç—ã –º–æ–≥—É—Ç –±—ã—Ç—å —á–∏—Å–ª–æ–≤—ã–º–∏ –∏ —Å—Ç—Ä–æ–∫–æ–≤—ã–º–∏. \n3 - ¬´–ê–Ω–∞–ª–∏–∑–∏—Ä–æ–≤–∞—Ç—å –ø—Ä–æ–≥—Ä–∞–º–º—É¬ª-–ø—Ä–æ—Ü–µ—Å—Å —Ä–µ—à–µ–Ω–∏—è –ø—Ä–æ–±–ª–µ–º—ã –ø—Ä–æ–≥—Ä–∞–º–º—ã –ø—É—Ç–µ–º —Ä–∞–∑–±–∏–µ–Ω–∏—è –±–æ–ª—å—à–æ–π –ø—Ä–æ–±–ª–µ–º—ã –Ω–∞ –ø–æ–¥–∑–∞–¥–∞—á–∏. –ö–∞–∂–¥–∞—è –ø–æ–¥–∑–∞–¥–∞—á–∞ –∏–ª–∏ ¬´–ø–æ–¥-–ø—Ä–æ–±–ª–µ–º–∞¬ª –±—É–¥–µ—Ç —Ä–µ—à–∞—Ç—å—Å—è –æ—Ç–¥–µ–ª—å–Ω–æ, —á—Ç–æ –≤ –∫–æ–Ω–µ—á–Ω–æ–º –∏—Ç–æ–≥–µ –ø—Ä–∏–≤–µ–¥–µ—Ç –∫ –±–æ–ª–µ–µ –ø—Ä–æ—Å—Ç–æ–º—É —Ä–µ—à–µ–Ω–∏—é –≥–ª–æ–±–∞–ª—å–Ω–æ–π –ø—Ä–æ–±–ª–µ–º—ã. \n4 - –ë–µ—Ç–∞-–≤–µ—Ä—Å–∏—è-–≤–µ—Ä—Å–∏—è, –∫–æ—Ç–æ—Ä–∞—è –º–æ–∂–µ—Ç –±—ã—Ç—å –¥–æ—Ä–∞–±–æ—Ç–∞–Ω–∞ –∏ –∏–∑–º–µ–Ω–µ–Ω–∞ –ø–æ—Å–ª–µ –ø–æ–ª—É—á–µ–Ω–∏—è –æ–±—Ä–∞—Ç–Ω–æ–π —Å–≤—è–∑–∏ –æ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π. \n5 - –û–ø–µ—Ä–∞—Ç–æ—Ä—ã –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è-–æ–ø–µ—Ä–∞—Ç–æ—Ä –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –¥–ª—è —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –∑–Ω–∞—á–µ–Ω–∏–π –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π.')
    await message.answer('–í–∞—Ä–∏–∞–Ω—Ç 2: \n\n1 - –†–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫ –±–æ—Ç–∞ - –ë–µ—Ä–µ–∑–æ–≤—Å–∫–∏–π –ê—Ä—Å–µ–Ω–∏–π. \n2 - –í –Ω–∞—Å—Ç–æ—è—â–µ–µ –≤—Ä–µ–º—è –≥–æ–¥ 2025. \n3 - –ù–∞—Å—Ç—Ä–æ–µ–Ω–∏–µ —É —Ç–µ–±—è –æ—Ç–ª–∏—á–Ω–æ–µ, –ø–æ—Ç–æ–º—É —á—Ç–æ –ø—Ä–æ—Ö–æ–¥–∏—à—å –Ω–∞—à–µ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ). \n4 - –¢—ã —Å–µ–≥–æ–¥–Ω—è —è–≤–Ω–æ –≤—Å—Ç–∞–ª –∏ —Å —É—Ç—Ä–∞ –≤–∫—É—Å–Ω–æ –ø–æ–µ–ª, –ø–µ—Ä–µ–¥ –ø—Ä–æ—Ö–æ–∂–¥–µ–Ω–∏–µ–º —Ç–µ—Å—Ç–æ–≤. \n5 - –¢–µ—Å—Ç —Ç–µ–±–µ –Ω—É –Ω–µ –º–æ–∂–µ—Ç –Ω–µ –Ω—Ä–∞–≤–∏—Ç—Å—è.')
    await message.answer('–í–∞—Ä–∏–∞–Ω—Ç 3: \n\n1 - –û—Ç–ª–∞–¥–∫–∞-—ç—Ç–æ –ø—Ä–æ—Ü–µ—Å—Å –ø–æ–∏—Å–∫–∞ –∏ —É—Å—Ç—Ä–∞–Ω–µ–Ω–∏—è –æ—à–∏–±–æ–∫ –≤ –ø—Ä–æ–≥—Ä–∞–º–º–µ. \n2 - –ê–ª–≥–æ—Ä–∏—Ç–º-—ç—Ç–æ –∫–æ–Ω–µ—á–Ω—ã–π –Ω–∞–±–æ—Ä —à–∞–≥–æ–≤, –∫–æ—Ç–æ—Ä—ã–µ –ø—Ä–∏ —Å–ª–µ–¥–æ–≤–∞–Ω–∏–∏ –∏–º —Ä–µ—à–∞—é—Ç –∫–∞–∫—É—é-—Ç–æ –∑–∞–¥–∞—á—É. \n3 - –ë–ª–æ–∫-—Å—Ö–µ–º–∞-—ç—Ç–æ –≥—Ä–∞—Ñ–∏—á–µ—Å–∫–æ–µ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏–µ –ø—Ä–æ–≥—Ä–∞–º–º—ã. –ë–ª–æ–∫-—Å—Ö–µ–º–∞ –ø–æ–º–æ–≥–∞–µ—Ç –ø–æ–Ω—è—Ç—å –ª–æ–≥–∏–∫—É —Ä–∞–±–æ—Ç—ã –ø—Ä–æ–≥—Ä–∞–º–º—ã –∏–ª–∏ –µ–µ —á–∞—Å—Ç–∏ –ø—Ä–∏ –ø—Ä–æ–µ–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏–∏. \n4 - –ü–µ—Ä–µ–º–µ–Ω–Ω—ã–µ-—ç—Ç–æ –∏–º–µ–Ω–æ–≤–∞–Ω–Ω—ã–µ —è—á–µ–π–∫–∏ –ø–∞–º—è—Ç–∏, –∫–æ—Ç–æ—Ä—ã–µ –∏—Å–ø–æ–ª—å–∑—É—é—Ç—Å—è –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö –ø—Ä–æ–≥—Ä–∞–º–º—ã, —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤ –µ–µ –≤—ã—á–∏—Å–ª–µ–Ω–∏–π. –ó–Ω–∞—á–µ–Ω–∏–µ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π –º–æ–∂–µ—Ç –º–µ–Ω—è—Ç—å—Å—è –≤ —Ö–æ–¥–µ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –ø—Ä–æ–≥—Ä–∞–º–º—ã. \n5 - –ú–∞—Å—Å–∏–≤-—ç—Ç–æ –Ω–∞–±–æ—Ä —Å–º–µ–∂–Ω—ã—Ö –æ–±–ª–∞—Å—Ç–µ–π –ø–∞–º—è—Ç–∏, –∫–æ—Ç–æ—Ä—ã–µ —Ö—Ä–∞–Ω—è—Ç –¥–∞–Ω–Ω—ã–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω–æ–≥–æ —Ç–∏–ø–∞.')

@router.message (F.text == '–û –Ω–∞—Å')
async def onas(message: Message):
    await message.answer('–¢–µ–ª–µ–≥—Ä–∞–º–º-–±–æ—Ç –±—ã–ª —Ä–∞–∑—Ä–∞–±–æ—Ç–∞–Ω –Ω–∞ —è–∑—ã–∫–µ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è Python, —Å—Ç—É–¥–µ–Ω—Ç–æ–º –ö–æ–º—Å–æ–º–æ–ª—å—Å–∫–æ–≥–æ-–Ω–∞-–ê–º—É—Ä–µ –ì–æ—Å—É–¥–∞—Ä—Å—Ç–≤–µ–Ω–Ω–æ–≥–æ –£–Ω–∏–≤–µ—Ä—Å–∏—Ç–µ—Ç–∞, –ë–µ—Ä–µ–∑–æ–≤—Å–∫–∏–º –ê—Ä—Å–µ–Ω–∏–µ–º, –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è –§–ö–¢, –≥—Ä—É–ø–ø—ã 3–ò–¢–±-1.\n–î–∞–Ω–Ω—ã–π —Ç–µ–ª–µ–≥—Ä–∞–º–º-–±–æ—Ç –ø—Ä–µ–¥–Ω–∞–∑–Ω–∞—á–µ–Ω –¥–ª—è —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è —Å—Ç—É–¥–µ–Ω—Ç–æ–≤ –Ω–∞ –∑–Ω–∞–Ω–∏–µ –æ—Å–Ω–æ–≤ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è.')

@router.callback_query(F.data == 'VARone')
async def VARone(callback: CallbackQuery, state: FSMContext):
    await callback.answer('–í—ã –≤—ã–±—Ä–∞–ª–∏ –≤–∞—Ä–∏–∞–Ω—Ç')
    await callback.message.answer('–í—ã –≤—ã–±—Ä–∞–ª–∏ –ø–µ—Ä–≤—ã–π –≤–∞—Ä–∏–∞–Ω—Ç.')
    await callback.message.answer('–û—Ç–≤–µ—Ç—å—Ç–µ –Ω–∞ 5 –≤–æ–ø—Ä–æ—Å–æ–≤, –≤ –æ—Ç–≤–µ—Ç –∑–∞–ø–∏—Å—ã–≤–∞–µ—Ç—Å—è —Ç–æ–ª—å–∫–æ –≤–∞—Ä–∏–∞–Ω—Ç –æ—Ç–≤–µ—Ç–∞, –æ—Ç–≤–µ—Ç—ã –Ω—É–∂–Ω–æ –ø–∏—Å–∞—Ç—å —á–µ—Ä–µ–∑ –ø—Ä–æ–±–µ–ª')

    await callback.message.answer('1. –ß—Ç–æ —Ç–∞–∫–æ–µ –∑–∞—Ä–µ–∑–µ—Ä–≤–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ —Å–ª–æ–≤–∞ –≤ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏–∏? : \na - –Ø–∑—ã–∫–æ–≤–∞—è –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏—è, –∫–æ—Ç–æ—Ä–∞—è –º–æ–∂–µ—Ç –æ–ø—Ä–µ–¥–µ–ª—è—Ç—å —É—á–∞—Å—Ç–æ–∫ –ø—Ä–æ–≥—Ä–∞–º–º—ã.  b - –°–ª–æ–≤–∞ –∏ –≤—ã—Ä–∞–∂–µ–Ω–∏—è, –∫–æ—Ç–æ—Ä—ã–µ –∏–º–µ—é—Ç –ø—Ä–µ–¥–æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è.  c - –ë–∏–Ω–∞—Ä–Ω–∞—è —Ñ–æ—Ä–º–∞ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏—è –∫–æ–¥–∞.  d - –ü–æ—Å—Ç–æ—è–Ω–Ω–∞—è, –∏–º–µ–Ω–æ–≤–∞–Ω–Ω–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ.')
    await callback.message.answer('2. –ß—Ç–æ —Ç–∞–∫–æ–µ –∫–æ–Ω—Å—Ç–∞–Ω—Ç–∞? : \na - –ü—Ä–æ—Ü–µ—Å—Å —Ä–µ—à–µ–Ω–∏—è –ø—Ä–æ–±–ª–µ–º—ã –ø—É—Ç–µ–º —Ä–∞–∑–±–∏–µ–Ω–∏—è –Ω–∞ –ø–æ–¥–∑–∞–¥–∞—á–∏.  b - –ü—Ä–æ—Ü–µ—Å—Å –ø—Ä–æ–≤–µ—Ä–∫–∏ –ø—Ä–æ–≥—Ä–∞–º–º–Ω–æ–≥–æ –æ–±–µ—Å–ø–µ—á–µ–Ω–∏—è. c - –ì–∞—Ä–∞–Ω—Ç–∏—Ä–æ–≤–∞–Ω–Ω–∞—è –ø—Ä–∞–≤–∏–ª—å–Ω–∞—è —Ä–∞–±–æ—Ç–∞ –ø—Ä–æ–≥—Ä–∞–º–º—ã.  d - –ü–æ—Å—Ç–æ—è–Ω–Ω–∞—è, –∏–º–µ–Ω–æ–≤–∞–Ω–Ω–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ, –∫–æ—Ç–æ—Ä–æ–µ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –∏–∑–º–µ–Ω–µ–Ω–æ.')
    await callback.message.answer('3. –ß—Ç–æ –∑–Ω–∞—á–∏—Ç ¬´–∞–Ω–∞–ª–∏–∑–∏—Ä–æ–≤–∞—Ç—å –ø—Ä–æ–≥—Ä–∞–º–º—É¬ª? : \na - –ò—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å —è–∑—ã–∫, –±–ª–∏–∑–∫–∏–π –∫ —Ç–æ–º—É, —á—Ç–æ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –ø—Ä–∏ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏–∏.  b - –ü—Ä–æ—Ü–µ—Å—Å —Ä–µ—à–µ–Ω–∏—è –ø—Ä–æ–±–ª–µ–º—ã –ø—Ä–æ–≥—Ä–∞–º–º—ã –ø—É—Ç–µ–º —Ä–∞–∑–±–∏–µ–Ω–∏—è –±–æ–ª—å—à–æ–π –ø—Ä–æ–±–ª–µ–º—ã –Ω–∞ –ø–æ–¥–∑–∞–¥–∞—á–∏.  c - –î–ª—è –ø—Ä–æ—á—Ç–µ–Ω–∏—è –∫–æ–¥–∞, –Ω–∞–ø–∏—Å–∞–Ω–Ω—ã–π –Ω–∞ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω–æ–º —è–∑—ã–∫–µ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è.  d - –í—ã–ø–æ–ª–Ω—è—Ç—å –¥–µ–π—Å—Ç–≤–∏–µ –¥–æ —Ç–µ—Ö –ø–æ—Ä, –ø–æ–∫–∞ –∑–∞–¥–∞–Ω–Ω–æ–µ —É—Å–ª–æ–≤–∏–µ –Ω–µ —Å—Ç–∞–Ω–µ—Ç –ª–æ–∂–Ω—ã–º.')
    await callback.message.answer('4. –ß—Ç–æ —Ç–∞–∫–æ–µ –±–µ—Ç–∞-–≤–µ—Ä—Å–∏—è? : \na - –í–µ—Ä—Å–∏—è —Ç–æ–ª—å–∫–æ –¥–ª—è —Ä–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–æ–≤.  b - –ü–æ–ª–Ω–æ—Ü–µ–Ω–Ω–∞—è –≤–µ—Ä—Å–∏—è –ø—Ä–æ–≥—Ä–∞–º–º—ã, –Ω–µ —Ç—Ä–µ–±—É—é—â–∞—è —Ä–∞–±–æ—Ç–∞.  c - –í–µ—Ä—Å–∏—è, –∫–æ—Ç–æ—Ä–∞—è –º–æ–∂–µ—Ç –±—ã—Ç—å –¥–æ—Ä–∞–±–æ—Ç–∞–Ω–∞ –∏ –∏–∑–º–µ–Ω–µ–Ω–∞ –ø–æ—Å–ª–µ –ø–æ–ª—É—á–µ–Ω–∏—è –æ–±—Ä–∞—Ç–Ω–æ–π —Å–≤—è–∑–∏ –æ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π.  d - –í–µ—Ä—Å–∏—è –¥–æ—Å—Ç—É–ø–Ω–∞—è —Ç–æ–ª—å–∫–æ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π —Å–æ —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã–º –¥–æ—Å—Ç—É–ø–æ–º (VIP) –∏ —Ç–µ—Ö –∫—Ç–æ –∫—É–ø–∏–ª –ø—Ä–æ–≥—Ä–∞–º–º—É.')
    await callback.message.answer('5. –ó–∞—á–µ–º –Ω—É–∂–Ω—ã –æ–ø–µ—Ä–∞—Ç–æ—Ä—ã –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è? : \na - –î–ª—è —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –∑–Ω–∞—á–µ–Ω–∏–π –≤ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π.  b - –î–ª—è –æ–±–µ—Å–ø–µ—á–µ–Ω–∏—è —Ä–∞–±–æ—Ç—ã –ø—Ä–æ–≥—Ä–∞–º–º—ã.  c - –î–ª—è —Å—Ç–∞–±–∏–ª—å–Ω–æ–π —Ä–∞–±–æ—Ç—ã –∫–æ–¥–∞.  d - –î–ª—è –æ–ø—Ç–∏–º–∏–∑–∞—Ü–∏–∏ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è.')

    await state.set_state(Test.answers)

@router.message(Test.answers)
async def collect_answers_var1(message: Message, state: FSMContext):
    user_answers = message.text.strip()
    if not user_answers:
        await message.answer("–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –≤–∞—à–∏ –æ—Ç–≤–µ—Ç—ã.")
        return
    
    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –æ–±—ã—á–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –≤ —á–∞—Ç
    await message.answer(f"–í—ã –æ—Ç–ø—Ä–∞–≤–∏–ª–∏ —Å–ª–µ–¥—É—é—â–∏–µ –æ—Ç–≤–µ—Ç—ã:\n{user_answers}\n\n–ü—Ä–∞–≤–∏–ª—å–Ω—ã–µ –æ—Ç–≤–µ—Ç—ã:\nb d b c a\n\n–°–ø–∞—Å–∏–±–æ –∑–∞ –≤–∞—à–∏ –æ—Ç–≤–µ—Ç—ã! –ñ–µ–ª–∞–µ—Ç–µ –ø—Ä–æ–π—Ç–∏ –µ—â—ë?", reply_markup=kb.testi)
    
    # –°–æ–∑–¥–∞–µ–º —Ñ–∞–π–ª —Å —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞–º–∏
    current_time = datetime.now().strftime("%d.%m.%Y %H:%M:%S")
    file_content = f"""–†–ï–ó–£–õ–¨–¢–ê–¢–´ –¢–ï–°–¢–ò–†–û–í–ê–ù–ò–Ø
========================

–î–∞—Ç–∞ –∏ –≤—Ä–µ–º—è: {current_time}
–¢–µ—Å—Ç: –í–∞—Ä–∏–∞–Ω—Ç 1 (–û—Å–Ω–æ–≤—ã –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏—è)

–í–∞—à–∏ –æ—Ç–≤–µ—Ç—ã: {user_answers}
–ü—Ä–∞–≤–∏–ª—å–Ω—ã–µ –æ—Ç–≤–µ—Ç—ã: b d b c a

–í–æ–ø—Ä–æ—Å—ã –∏ –æ—Ç–≤–µ—Ç—ã:
1. –ß—Ç–æ —Ç–∞–∫–æ–µ –∑–∞—Ä–µ–∑–µ—Ä–≤–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ —Å–ª–æ–≤–∞ –≤ –ø—Ä–æ–≥—Ä–∞–º–º–∏—Ä–æ–≤–∞–Ω–∏–∏? - –í–∞—à –æ—Ç–≤–µ—Ç: {user_answers.split()[0] if len(user_answers.split()) > 0 else '–ù–ï–¢'} (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π: b)
2. –ß—Ç–æ —Ç–∞–∫–æ–µ –∫–æ–Ω—Å—Ç–∞–Ω—Ç–∞? - –í–∞—à –æ—Ç–≤–µ—Ç: {user_answers.split()[1] if len(user_answers.split()) > 1 else '–ù–ï–¢'} (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π: d)
3. –ß—Ç–æ –∑–Ω–∞—á–∏—Ç ¬´–∞–Ω–∞–ª–∏–∑–∏—Ä–æ–≤–∞—Ç—å –ø—Ä–æ–≥—Ä–∞–º–º—É¬ª? - –í–∞—à –æ—Ç–≤–µ—Ç: {user_answers.split()[2] if len(user_answers.split()) > 2 else '–ù–ï–¢'} (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π: b)
4. –ß—Ç–æ —Ç–∞–∫–æ–µ –±–µ—Ç–∞-–≤–µ—Ä—Å–∏—è? - –í–∞—à –æ—Ç–≤–µ—Ç: {user_answers.split()[3] if len(user_answers.split()) > 3 else '–ù–ï–¢'} (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π: c)
5. –ó–∞—á–µ–º –Ω—É–∂–Ω—ã –æ–ø–µ—Ä–∞—Ç–æ—Ä—ã –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è? - –í–∞—à –æ—Ç–≤–µ—Ç: {user_answers.split()[4] if len(user_answers.split()) > 4 else '–ù–ï–¢'} (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π: a)

–°–ø–∞—Å–∏–±–æ –∑–∞ –ø—Ä–æ—Ö–æ–∂–¥–µ–Ω–∏–µ —Ç–µ—Å—Ç–∞!
"""
    
    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Ñ–∞–π–ª
    file_bytes = file_content.encode('utf-8')
    document = BufferedInputFile(file_bytes, filename=f"test_result_var1_{datetime.now().strftime('%Y%m%d_%H%M%S')}.txt")
    await message.answer_document(document=document, caption="üìÑ –í–∞—à–∏ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã —Ç–µ—Å—Ç–∞")
    
    await state.clear()

@router.callback_query(F.data == 'VARtwo')
async def VARtwo(callback: CallbackQuery, state: FSMContext):
    await callback.answer('–í—ã –≤—ã–±—Ä–∞–ª–∏ –≤–∞—Ä–∏–∞–Ω—Ç')
    await callback.message.answer('–í—ã –≤—ã–±—Ä–∞–ª–∏ –≤—Ç–æ—Ä–æ–π –≤–∞—Ä–∏–∞–Ω—Ç, —Å—á–∞—Å—Ç–ª–∏–≤—ã–π ;)')
    await callback.message.answer('–û—Ç–≤–µ—Ç—å—Ç–µ –Ω–∞ 5 –≤–æ–ø—Ä–æ—Å–æ–≤, –≤ –æ—Ç–≤–µ—Ç –∑–∞–ø–∏—Å—ã–≤–∞–µ—Ç—Å—è —Ç–æ–ª—å–∫–æ –≤–∞—Ä–∏–∞–Ω—Ç –æ—Ç–≤–µ—Ç–∞, –æ—Ç–≤–µ—Ç—ã –Ω—É–∂–Ω–æ –ø–∏—Å–∞—Ç—å —á–µ—Ä–µ–∑ –ø—Ä–æ–±–µ–ª')

    await callback.message.answer('1. –ö–∞–∫ –∑–æ–≤—É—Ç —Ä–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–∞ –¥–∞–Ω–Ω–æ–≥–æ –±–æ—Ç–∞ :\na - –ë–µ—Ä–µ–∑–æ–≤—Å–∫–∏–π –ê—Ä—Å–µ–Ω–∏–π.  b - –°–∏–¥–æ—Ä–æ–≤ –ò–≤–∞–Ω.  c - –ú–æ–∏—Å–µ–µ–≤–∞ –û–∫—Å–∞–Ω–∞.  d - –ù–µ –∑–Ω–∞—é.')
    await callback.message.answer('2. –ö–∞–∫–æ–π —Å–µ–≥–æ–¥–Ω—è –≥–æ–¥ :\na - 2025.  b - 2023.  c - 2027.  d - 2028.')
    await callback.message.answer('3. –ö–∞–∫–æ–µ —Ç–≤–æ–µ –Ω–∞—Å—Ç—Ä–æ–µ–Ω–∏–µ :\na - –û—Ç–ª–∏—á–Ω–æ–µ(–ø–æ–¥—Å–∫–∞–∑–∫–∞).  b - –•–æ—Ä–æ—à–µ–µ.  c - –ü–ª–æ—Ö–æ–µ((.  d - –ö–∞–∫ –æ–±—ã—á–Ω–æ.')
    await callback.message.answer('4. –¢—ã —Å–µ–≥–æ–¥–Ω—è –≤–∫—É—Å–Ω–æ –ø–æ–µ–ª?) :\na - –î–∞.  b - –ù–µ—Ç.')
    await callback.message.answer('5. –¢–µ–±–µ –Ω—Ä–∞–≤–∏—Ç—Å—è —Ç–µ—Å—Ç? :\na - –î–∞.  b - –ù–µ—Ç.')

    await state.set_state(Testtwo.answerss)

@router.message(Testtwo.answerss)
async def collect_answers_var2(message: Message, state: FSMContext):
    user_answers = message.text.strip()
    if not user_answers:
        await message.answer("–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –≤–∞—à–∏ –æ—Ç–≤–µ—Ç—ã.")
        return
    
    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –æ–±—ã—á–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –≤ —á–∞—Ç
    await message.answer(f"–í—ã –æ—Ç–ø—Ä–∞–≤–∏–ª–∏ —Å–ª–µ–¥—É—é—â–∏–µ –æ—Ç–≤–µ—Ç—ã:\n{user_answers}\n\n–ü—Ä–∞–≤–∏–ª—å–Ω—ã–µ –æ—Ç–≤–µ—Ç—ã:\na a a a a\n\n–°–ø–∞—Å–∏–±–æ –∑–∞ –≤–∞—à–∏ –æ—Ç–≤–µ—Ç—ã! –ñ–µ–ª–∞–µ—Ç–µ –ø—Ä–æ–π—Ç–∏ –µ—â—ë?", reply_markup=kb.testi)
    
    # –°–æ–∑–¥–∞–µ–º —Ñ–∞–π–ª —Å —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞–º–∏
    current_time = datetime.now().strftime("%d.%m.%Y %H:%M:%S")
    file_content = f"""–†–ï–ó–£–õ–¨–¢–ê–¢–´ –¢–ï–°–¢–ò–†–û–í–ê–ù–ò–Ø
========================

–î–∞—Ç–∞ –∏ –≤—Ä–µ–º—è: {current_time}
–¢–µ—Å—Ç: –í–∞—Ä–∏–∞–Ω—Ç 2 (–û –±–æ—Ç–µ)

–í–∞—à–∏ –æ—Ç–≤–µ—Ç—ã: {user_answers}
–ü—Ä–∞–≤–∏–ª—å–Ω—ã–µ –æ—Ç–≤–µ—Ç—ã: a a a a a

–í–æ–ø—Ä–æ—Å—ã –∏ –æ—Ç–≤–µ—Ç—ã:
1. –ö–∞–∫ –∑–æ–≤—É—Ç —Ä–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–∞ –¥–∞–Ω–Ω–æ–≥–æ –±–æ—Ç–∞? - –í–∞—à –æ—Ç–≤–µ—Ç: {user_answers.split()[0] if len(user_answers.split()) > 0 else '–ù–ï–¢'} (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π: a)
2. –ö–∞–∫–æ–π —Å–µ–≥–æ–¥–Ω—è –≥–æ–¥? - –í–∞—à –æ—Ç–≤–µ—Ç: {user_answers.split()[1] if len(user_answers.split()) > 1 else '–ù–ï–¢'} (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π: a)
3. –ö–∞–∫–æ–µ —Ç–≤–æ–µ –Ω–∞—Å—Ç—Ä–æ–µ–Ω–∏–µ? - –í–∞—à –æ—Ç–≤–µ—Ç: {user_answers.split()[2] if len(user_answers.split()) > 2 else '–ù–ï–¢'} (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π: a)
4. –¢—ã —Å–µ–≥–æ–¥–Ω—è –≤–∫—É—Å–Ω–æ –ø–æ–µ–ª? - –í–∞—à –æ—Ç–≤–µ—Ç: {user_answers.split()[3] if len(user_answers.split()) > 3 else '–ù–ï–¢'} (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π: a)
5. –¢–µ–±–µ –Ω—Ä–∞–≤–∏—Ç—Å—è —Ç–µ—Å—Ç? - –í–∞—à –æ—Ç–≤–µ—Ç: {user_answers.split()[4] if len(user_answers.split()) > 4 else '–ù–ï–¢'} (–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π: a)

–°–ø–∞—Å–∏–±–æ –∑–∞ –ø—Ä–æ—Ö–æ–∂–¥–µ–Ω–∏–µ —Ç–µ—Å—Ç–∞!
"""
    
    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Ñ–∞–π–ª
    file_bytes = file_content.encode('utf-8')
    document = BufferedInputFile(file_bytes, filename=f"test_result_var2_{datetime.now().strftime('%Y%m%d_%H%M%S')}.txt")
    await message.answer_document(document=document, caption="üìÑ –í–∞—à–∏ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ã —Ç–µ—Å—Ç–∞")
    
    await state.clear()

@router.callback_query(F.data == 'VARthree')
async def VARthree(callback: CallbackQuery, state: FSMContext):
    await callback.answer('–í—ã –≤—ã–±—Ä–∞–ª–∏ –≤–∞—Ä–∏–∞–Ω—Ç')
    await callback.message.answer('–í—ã –≤—ã–±—Ä–∞–ª–∏ —Ç—Ä–µ—Ç–∏–π –≤–∞—Ä–∏–∞–Ω—Ç.')
    await callback.message.answer('–û—Ç–≤–µ—Ç—å—Ç–µ –Ω–∞ 5 –≤–æ–ø—Ä–æ—Å–æ–≤, –≤ –æ—Ç–≤–µ—Ç –∑–∞–ø–∏—Å—ã–≤–∞–µ—Ç—Å—è —Ç–æ–ª—å–∫–æ –≤–∞—Ä–∏–∞–Ω—Ç –æ—Ç–≤–µ—Ç–∞, –æ—Ç–≤–µ—Ç—ã –Ω—É–∂–Ω–æ –ø–∏—Å–∞—Ç—å —á–µ—Ä–µ–∑ –ø—Ä–æ–±–µ–ª')

    await callback.message.answer('1. –ß—Ç–æ —Ç–∞–∫–æ–µ –æ—Ç–ª–∞–¥–∫–∞? :\na - –ü—Ä–æ—Ü–µ—Å—Å –ø–æ–∏—Å–∫–∞ –∏ —É—Å—Ç—Ä–∞–Ω–µ–Ω–∏—è –æ—à–∏–±–æ–∫ –≤ –ø—Ä–æ–≥—Ä–∞–º–º–µ.  b - –õ–æ–≥–∏—á–µ—Å–∫–∏–µ –æ—à–∏–±–∫–∏.  c - –ì—Ä–∞—Ñ–∏—á–µ—Å–∫–æ–µ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏–µ –ø—Ä–æ–≥—Ä–∞–º–º—ã.  d - –ü–æ–¥–¥–µ—Ä–∂–∫–∞ –ø—Ä–æ–≥—Ä–∞–º–º—ã.')
    await callback.message.answer('2. –ß—Ç–æ —Ç–∞–∫–æ–µ –∞–ª–≥–æ—Ä–∏—Ç–º? :\na - –ö–æ–¥, –Ω–∞–ø–∏—Å–∞–Ω–Ω—ã–π –Ω–∞ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω–æ–º —è–∑—ã–∫–µ.  b - –ö–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏ —è–∑—ã–∫–∞.  c - –ö–æ–Ω–µ—á–Ω—ã–π –Ω–∞–±–æ—Ä —à–∞–≥–æ–≤, –∫–æ—Ç–æ—Ä—ã–µ –ø—Ä–∏ —Å–ª–µ–¥–æ–≤–∞–Ω–∏–∏ –∏–º —Ä–µ—à–∞—é—Ç –∫–∞–∫—É—é-—Ç–æ –∑–∞–¥–∞—á—É.  d - –ë–∏–Ω–∞—Ä–Ω–∞—è —Ñ–æ—Ä–º–∞ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏—è –∫–æ–¥–∞.')
    await callback.message.answer('3. –ß—Ç–æ —Ç–∞–∫–æ–µ –±–ª–æ–∫-—Å—Ö–µ–º–∞? :\na - –ü—Ä–æ—Ü–µ—Å—Å —Ä–µ–≥—É–ª—è—Ä–Ω–æ–≥–æ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –ø—Ä–æ–≥—Ä–∞–º–º—ã. b - –ì—Ä–∞—Ñ–∏—á–µ—Å–∫–æ–µ –ø—Ä–µ–¥—Å—Ç–∞–≤–ª–µ–Ω–∏–µ –ø—Ä–æ–≥—Ä–∞–º–º—ã.  c - C–ø–µ—Ü–∏–∞–ª—å–Ω—ã–µ —Å–∏–º–≤–æ–ª—ã, –∫–æ—Ç–æ—Ä—ã–µ –∏—Å–ø–æ–ª—å–∑—É—é—Ç—Å—è –≤ –∫–æ–¥–µ –ø—Ä–æ–≥—Ä–∞–º–º—ã –¥–ª—è –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω—ã—Ö –æ–ø–µ—Ä–∞—Ü–∏–π –Ω–∞–¥ –¥–∞–Ω–Ω—ã–º–∏.  d -  –ù–∞–±–æ—Ä –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏–π.')
    await callback.message.answer('4. –ß—Ç–æ —Ç–∞–∫–æ–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ? :\na - –ó–∞—Ä–µ–∑–µ—Ä–≤–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ –∏–ª–∏ –∫–ª—é—á–µ–≤—ã–µ —Å–ª–æ–≤–∞.  b - –Ø–∑—ã–∫–æ–≤–∞—è –∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏—è.  c - –ò–º–µ–Ω–æ–≤–∞–Ω–Ω—ã–µ —è—á–µ–π–∫–∏ –ø–∞–º—è—Ç–∏, –∫–æ—Ç–æ—Ä—ã–µ –∏—Å–ø–æ–ª—å–∑—É—é—Ç—Å—è –¥–ª—è —Ö—Ä–∞–Ω–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö –ø—Ä–æ–≥—Ä–∞–º–º—ã.  d - –ò—Å–ø–æ–ª–Ω—è–µ–º—ã–π –º–∞—à–∏–Ω–Ω—ã–π –∫–æ–¥.')
    await callback.message.answer('5. –ß—Ç–æ —Ç–∞–∫–æ–µ –º–∞—Å—Å–∏–≤? :\na - —ç—Ç–æ –Ω–∞–±–æ—Ä —Å–º–µ–∂–Ω—ã—Ö –æ–±–ª–∞—Å—Ç–µ–π –ø–∞–º—è—Ç–∏, –∫–æ—Ç–æ—Ä—ã–µ —Ö—Ä–∞–Ω—è—Ç –¥–∞–Ω–Ω—ã–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω–æ–≥–æ —Ç–∏–ø–∞.  b - –ê–≤—Ç–æ–Ω–æ–º–Ω—ã–π –Ω–∞–±–æ—Ä –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏–π, –∫–æ—Ç–æ—Ä—ã–µ –º–æ–≥—É—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å—Å—è –∏–∑ –ª—é–±–æ–π —Ç–æ—á–∫–∏ –ø—Ä–æ–≥—Ä–∞–º–º—ã.  c - –ê—Ä–∏—Ñ–º–µ—Ç–∏—á–µ—Å–∫–∏–µ –æ–ø–µ—Ä–∞—Ç–æ—Ä—ã.  d - –ë–æ–ª–µ–µ —Å–ª–æ–∂–Ω—ã–µ –∞–ª–≥–æ—Ä–∏—Ç–º—ã.')

    await state.set_state(Testthree.answersss)

@router.message(Testthree.answersss)
